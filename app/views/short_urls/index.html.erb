<p id="notice"><%= notice %></p>

<h1>Short Urls</h1>

<table>
  <thead>
    <tr>
      <th>Short url</th>
      <th>Long url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><%= link_to "#{short_url.generate_short_url}", short_url_path(short_url.hash_string), remote: true%></td>
        <td><%= short_url.long_url %></td>
        <td><%= link_to 'Destroy', short_url_path(short_url.hash_string), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Short Url', new_short_url_path %>
